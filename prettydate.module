  }

  if ( empty($options) ) {
    $options[''] = t('No Defined Formats');
  }

  //remove PrettyDate formatters to prevent recursive lols
  //There has to be a better way to get all the prettydates TODO
  if ( isset($options['prettydate_default']) ) {
